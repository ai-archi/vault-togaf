@startuml
!theme plain

title Class Diagram Demo

' 定义类
class User {
  -id: Long
  -username: String
  -email: String
  +login()
  +logout()
  +updateProfile()
}

class Order {
  -id: Long
  -total: Decimal
  -status: String
  +create()
  +cancel()
  +complete()
}

class Product {
  -id: Long
  -name: String
  -price: Decimal
  -stock: Integer
  +updateStock()
  +getPrice()
}

class Payment {
  -id: Long
  -amount: Decimal
  -method: String
  +process()
  +refund()
}

' 定义关系
User "1" --> "*" Order : places
Order "*" --> "1" Product : contains
Order "1" --> "1" Payment : pays with

' 添加注释
note right of User
  User can place multiple orders
end note

note left of Payment
  Payment is processed
  after order creation
end note

@enduml

